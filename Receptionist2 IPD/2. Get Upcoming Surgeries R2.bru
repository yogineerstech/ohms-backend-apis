meta {
  name: Get Upcoming Surgeries (R2)
  type: http
  seq: 2
}

get {
  url: {{baseUrl}}/api/v1/receptionist2/ipd/surgeries/upcoming
  body: none
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

headers {
  Content-Type: application/json
}

params:query {
  days: 7
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Should return upcoming surgeries for receptionist", function() {
    expect(res.getBody().success).to.equal(true);
    expect(res.getBody().data.count).to.be.a('number');
    expect(res.getBody().data.surgeries).to.be.an('array');
  });
}