meta {
  name: Get Upcoming Surgeries
  type: http
  seq: 10
}

get {
  url: {{baseUrl}}/api/v1/ipd/admissions/surgery/upcoming
  body: none
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

headers {
  Content-Type: application/json
}

params:query {
  days: 7
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Should return upcoming surgeries", function() {
    expect(res.getBody().success).to.equal(true);
    expect(res.getBody().data).to.be.an('array');
  });
  
  test("Should include count", function() {
    expect(res.getBody().count).to.be.a('number');
  });
}